# AgriTrack Environment Variables
# Copy this to .env and fill in your values

# ===================
# Supabase
# ===================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ===================
# Clerk Authentication
# ===================
CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
CLERK_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx

# ===================
# MQTT Broker
# ===================
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_TOPIC=agritrack/live/sensors

# ===================
# API Configuration
# ===================
PORT=3001
API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ===================
# AI Engine
# ===================
AI_ENGINE_URL=http://localhost:8000
NEXT_PUBLIC_AI_ENGINE_URL=http://localhost:8000

# ===================
# Crop Residue Service
# ===================
NEXT_PUBLIC_CROP_RESIDUE_URL=http://localhost:8001

# ===================
# Simulator
# ===================
NUM_MACHINES=50
PUBLISH_INTERVAL=5.0

# ===================
# Twilio SMS (Phase 2)
# ===================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===================
# Firebase Push Notifications (Phase 2)
# ===================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour key here\n-----END PRIVATE KEY-----\n"

# ===================
# Email/SMTP (Phase 2 - Optional)
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@agritrack.com

# ===================
# CORS
# ===================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
